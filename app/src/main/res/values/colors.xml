    <!-- Android TV Design System - Dark Theme -->
    <!-- Optimized for 2m viewing distance -->
    <!-- ============================================ -->

    <!-- Background Colors -->
    <color name="background_primary">#121212</color>        <!-- Very dark grey -->
    <color name="background_surface">#1E1E1E</color>        <!-- Dark grey - Cards, containers -->
    <color name="background_elevated">#2D2D2D</color>       <!-- Elevated surfaces -->

    <!-- Text Colors -->
    <color name="text_primary">#E0E0E0</color>             <!-- Light grey - Main text -->
    <color name="text_secondary">#AAAAAA</color>           <!-- Medium grey - Secondary text -->
    <color name="text_tertiary">#999999</color>            <!-- Tertiary text -->
    <color name="text_quaternary">#666666</color>          <!-- Footer, hints -->
    <color name="text_header">#CCCCCC</color>              <!-- Page headers -->

    <!-- Focus & Selection -->
    <color name="focus_border">#2196F3</color>             <!-- Blue - Active element border -->
    <color name="focus_shadow">#402196F3</color>           <!-- Blue with alpha - Shadow -->
    <color name="selection_background">#1A2196F3</color>   <!-- Subtle blue background -->

    <!-- Dividers & Borders -->
    <color name="divider">#333333</color>                  <!-- Dark grey dividers -->
    <color name="border_inactive">#404040</color>          <!-- Inactive borders -->

    <!-- Metric Status Colors (Dynamic based on value) -->
    <color name="metric_success">#4CAF50</color>           <!-- Green - < 50% -->
    <color name="metric_warning">#FFC107</color>           <!-- Yellow - 50-80% -->
    <color name="metric_error">#F44336</color>             <!-- Red - > 80% -->

    <!-- Icon Colors -->
    <color name="icon_cpu">#4DD0E1</color>                 <!-- Cyan -->
    <color name="icon_ram">#42A5F5</color>                 <!-- Blue -->
    <color name="icon_temp">#66BB6A</color>                <!-- Green -->
    <color name="icon_default">#AAAAAA</color>             <!-- Default grey -->

    <!-- Progress Bar -->
    <color name="progress_background">#333333</color>      <!-- Unfilled portion -->
    <color name="progress_track">#222222</color>           <!-- Track background -->

    <!-- Button Colors -->
    <color name="button_start">#4CAF50</color>             <!-- Start button -->
    <color name="button_stop">#F44336</color>              <!-- Stop button -->
    <color name="button_background">#2D2D2D</color>        <!-- Default button -->
    <color name="button_text">#E0E0E0</color>              <!-- Button text -->
    
    <!-- Toggle Button States -->
    <color name="button_toggle_off">#1E1E1E</color>        <!-- Off state (dark) -->
    <color name="button_toggle_on">#1B5E20</color>         <!-- On state (dark green) -->

    <!-- Overlay (for floating widgets) -->
    <color name="overlay_background">#E6121212</color>     <!-- 90% opacity -->
    <color name="overlay_border">#404040</color>

    <!-- Transparent -->
    <color name="transparent">#00000000</color>

