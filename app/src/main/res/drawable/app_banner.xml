<?xml version="1.0" encoding="utf-8"?>
<!-- TV Banner 320x180dp -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1A1A1A"
                android:centerColor="#2D2D2D"
                android:endColor="#1A1A1A"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Accent border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#00E5FF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</layer-list>
