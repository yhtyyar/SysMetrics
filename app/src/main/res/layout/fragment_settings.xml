<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- MONITORING SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ MONITORING"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Interval"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_update_interval"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CHARTS SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ˆ CHARTS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_cpu_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CPU Chart" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_ram_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RAM Chart" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_temp_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature Chart" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_network_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network Chart" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_fps_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FPS Chart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chart Height"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spinner_chart_height"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- NOTIFICATIONS SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”” NOTIFICATIONS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_peak_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peak Notifications" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Interval"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spinner_peak_interval"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_cpu_peak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show CPU Peak" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_ram_peak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show RAM Peak" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_temp_peak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Temperature Peak" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_net_peak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Network Peak" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toast Duration"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_toast_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5s"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_toast_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="3"
                    android:valueTo="10"
                    android:stepSize="1" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FPS MONITORING SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® FPS MONITORING"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_fps_monitoring"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable FPS Monitoring" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_jank_detection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jank Detection" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FPS Threshold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_fps_threshold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 fps"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_fps_threshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="15"
                    android:valueTo="60"
                    android:stepSize="5" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ANALYTICS SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š ANALYTICS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_30s_avg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show 30s Average" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_1m_avg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show 1m Average" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_5m_avg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show 5m Average" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_percentiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Percentiles (P95, P99)" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- EXPORT SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ DATA EXPORT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Format"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_export_format"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Range"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spinner_export_range"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reset Button -->
        <Button
            android:id="@+id/btn_reset_defaults"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset to Defaults"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
