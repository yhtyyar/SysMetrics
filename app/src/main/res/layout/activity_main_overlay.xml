<?xml version="1.0" encoding="utf-8"?>
<!-- Improved Main Activity Layout with Big Toggle Button -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="@dimen/spacing_large">

    <!-- App Title -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overlay_status_off"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toggle Button (Smaller, Focused Design) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_toggle_overlay"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:text="@string/start_overlay"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/metric_error"
        app:backgroundTint="@color/button_toggle_off"
        app:icon="@drawable/ic_play"
        app:iconSize="32dp"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/selector_button_toggle"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:backgroundTint="@color/metric_error" />

    <!-- Current Metrics Preview (when active) -->
    <LinearLayout
        android:id="@+id/layout_metrics_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_metric_card"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_toggle_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_metrics"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- CPU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cpu_label"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary" />

            <TextView
                android:id="@+id/tv_cpu_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="48.5%"
                tools:textColor="@color/metric_warning" />
        </LinearLayout>

        <!-- RAM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ram_label"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary" />

            <TextView
                android:id="@+id/tv_ram_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="1250 / 1699 MB"
                tools:textColor="@color/metric_success" />
        </LinearLayout>

        <!-- Temperature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/temperature_label"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary" />

            <TextView
                android:id="@+id/tv_temp_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="45Â°C"
                tools:textColor="@color/metric_success" />
        </LinearLayout>

    </LinearLayout>

    <!-- Settings Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_settings"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/settings"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        app:strokeColor="@color/divider"
        app:cornerRadius="8dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Permission Info -->
    <TextView
        android:id="@+id/tv_permission_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/overlay_permission_info"
        android:textSize="12sp"
        android:textColor="@color/text_quaternary"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toTopOf="@id/btn_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
