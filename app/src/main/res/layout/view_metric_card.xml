<?xml version="1.0" encoding="utf-8"?>
<!-- Metric Card Component Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:orientation="vertical"
    android:paddingStart="@dimen/card_padding_horizontal"
    android:paddingEnd="@dimen/card_padding_horizontal"
    android:paddingTop="@dimen/card_padding_vertical"
    android:paddingBottom="@dimen/card_padding_vertical">

    <!-- Metric Name with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/metric_icon"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/icon_margin_end"
            android:contentDescription="@string/metric_icon"
            tools:src="@drawable/ic_cpu" />

        <TextView
            android:id="@+id/metric_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Tv.MetricName"
            tools:text="CPU Usage" />

    </LinearLayout>

    <!-- Metric Value (Large) -->
    <TextView
        android:id="@+id/metric_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Tv.MetricValue"
        tools:text="48.5%" />

    <!-- Progress Bar -->
    <com.sysmetrics.app.ui.components.ProgressBarMetric
        android:id="@+id/metric_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginTop="@dimen/spacing_small" />

    <!-- Percentage Text -->
    <TextView
        android:id="@+id/metric_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:textAppearance="@style/TextAppearance.Tv.MetricPercent"
        tools:text="48%" />

</LinearLayout>
