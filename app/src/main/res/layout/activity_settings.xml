<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/settings"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Position Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overlay_position"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_top_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/top_left"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent" />

                <RadioButton
                    android:id="@+id/rb_top_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/top_right"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent" />

                <RadioButton
                    android:id="@+id/rb_bottom_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_left"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent" />

                <RadioButton
                    android:id="@+id/rb_bottom_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_right"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/text_hint" />

            <!-- Update Interval Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_interval"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_interval_500"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/interval_500ms"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent" />

                <RadioButton
                    android:id="@+id/rb_interval_1000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/interval_1000ms"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent" />

                <RadioButton
                    android:id="@+id/rb_interval_2000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/interval_2000ms"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/text_hint" />

            <!-- Opacity Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/opacity"
                    android:textColor="@color/accent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_opacity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    tools:text="85%" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbar_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:min="30"
                android:progress="85"
                android:progressTint="@color/accent"
                android:thumbTint="@color/accent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/text_hint" />

            <!-- Metrics Display Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metrics_display"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_cpu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/show_cpu"
                android:textColor="@color/text_primary"
                android:checked="true"
                app:thumbTint="@color/accent"
                app:trackTint="@color/text_hint" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_ram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_ram"
                android:textColor="@color/text_primary"
                android:checked="true"
                app:thumbTint="@color/accent"
                app:trackTint="@color/text_hint" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_temperature"
                android:textColor="@color/text_primary"
                android:checked="true"
                app:thumbTint="@color/accent"
                app:trackTint="@color/text_hint" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary"
                android:text="@string/save"
                android:textColor="@color/text_primary"
                app:cornerRadius="@dimen/button_corner_radius" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
