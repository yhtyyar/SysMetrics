<?xml version="1.0" encoding="utf-8"?>
<!-- Home Fragment - Android TV Optimized Layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_screen_horizontal"
            android:paddingEnd="@dimen/padding_screen_horizontal"
            android:paddingTop="@dimen/padding_screen_top"
            android:paddingBottom="@dimen/padding_screen_bottom">

            <!-- App Title -->
            <TextView
                android:id="@+id/app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Tv.Header"
                android:layout_marginBottom="@dimen/spacing_xlarge" />

            <!-- CPU Metric Card -->
            <com.sysmetrics.app.ui.components.MetricCardView
                android:id="@+id/metric_cpu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_marginBottom="@dimen/card_margin_bottom"
                android:nextFocusDown="@id/metric_ram"
                android:nextFocusUp="@id/metric_temp" />

            <!-- RAM Metric Card -->
            <com.sysmetrics.app.ui.components.MetricCardView
                android:id="@+id/metric_ram"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_marginBottom="@dimen/card_margin_bottom"
                android:nextFocusDown="@id/metric_temp"
                android:nextFocusUp="@id/metric_cpu" />

            <!-- Temperature Metric Card -->
            <com.sysmetrics.app.ui.components.MetricCardView
                android:id="@+id/metric_temp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_marginBottom="@dimen/spacing_xlarge"
                android:nextFocusDown="@id/metric_cpu"
                android:nextFocusUp="@id/metric_ram" />

            <!-- Footer Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/cores_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Tv.Footer"
                    tools:text="Cores: 4" />

                <TextView
                    android:id="@+id/uptime_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.Tv.Footer"
                    tools:text="Uptime: 02:35:18" />

            </LinearLayout>

            <!-- Navigation Hint -->
            <TextView
                android:id="@+id/navigation_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center"
                android:text="@string/navigation_hint"
                android:textAppearance="@style/TextAppearance.Tv.Footer" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
